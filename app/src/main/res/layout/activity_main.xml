<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/FrameLayoutContanier"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"/>
    

    <nl.joery.animatedbottombar.AnimatedBottomBar
        app:abb_textAppearance="@style/CustomText"
        android:layout_alignParentBottom="true"
        app:abb_tabAnimationSelected="slide"
        android:id="@+id/bnView"
        app:abb_tabColorSelected="#0732CB"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:abb_selectedTabType="text"
        app:abb_textStyle="bold"
        app:abb_indicatorAppearance="round"
        app:abb_indicatorMargin="16dp"
        app:abb_indicatorHeight="4dp"
        app:abb_indicatorLocation="bottom"
        app:abb_indicatorColor="#0732CB"
        app:abb_tabs="@menu/bottm_navi"
        app:abb_selectedIndex="0" />

</RelativeLayout>